<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>dk.gruppe7</groupId>
        <artifactId>CBSE-G7-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>Common</artifactId>
    <packaging>nbm</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <useOSGiDependencies>true</useOSGiDependencies>
                    <publicPackages>
                        <publicPackage>dk.gruppe7.common</publicPackage>
                        <publicPackage>dk.gruppe7.common.data</publicPackage>
                        <publicPackage>collision</publicPackage>
                        <publicPackage>dispose</publicPackage>
                        <publicPackage>dk.gruppe7.common.graphics</publicPackage>
                        <publicPackage>dk.gruppe7.common.resources</publicPackage>
                        <publicPackage>dk.gruppe7.common.audio</publicPackage>
                        <publicPackage>dk.gruppe7.eventtypes</publicPackage>
                        <publicPackage>dk.gruppe7.annotations</publicPackage>
                        <publicPackage>dk.gruppe7.eventhandlers</publicPackage>
                        <publicPackage>dk.gruppe7.utils</publicPackage>
                        <publicPackage>dk.gruppe7.common.annotations</publicPackage>
                        <publicPackage>dk.gruppe7.common.eventhandlers</publicPackage>
                        <publicPackage>dk.gruppe7.common.eventtypes</publicPackage>
                        <publicPackage>dk.gruppe7.common.utils</publicPackage>
                    </publicPackages>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <useDefaultManifestFile>true</useDefaultManifestFile>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.netbeans.api</groupId>
            <artifactId>org-netbeans-api-annotations-common</artifactId>
            <version>${netbeans.version}</version>
        </dependency>
        <dependency>
            <groupId>com.1stleg</groupId>
            <artifactId>jnativehook</artifactId>
            <version>2.1.0</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.netbeans.api</groupId>
            <artifactId>org-openide-util</artifactId>
            <version>RELEASE82</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>